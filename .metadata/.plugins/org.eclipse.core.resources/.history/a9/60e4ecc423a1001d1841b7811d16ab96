package ensyu;

public class Ensyu14 {
	public static void main(String[] arghs) {
		int countBall = 0;
		int countStrike = 0;
		try (java.util.Scanner scanner = new java.util.Scanner(System.in)) {
			while (countBall < 4 && countStrike < 3) {
				System.out.println("投球してください");
				String Throw = scanner.nextLine();
				if (Throw.equals("ストライク")) {
					countStrike++;
				} else if (Throw.equals("ボール")) {
					countBall++;
				}
			}
			System.out.println("ストライク＝" + countStrike);
			System.out.println("ボール＝" + countBall);
		}
	}
}
