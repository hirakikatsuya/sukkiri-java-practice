package ensyu;

public class Ensyu14 {
	public static void main(String[] arghs) {
		int countBall = 0;
		int countStrike = 0;
		try (java.util.Scanner scanner = new java.util.Scanner(System.in)) {
			for (; countBall < 4 || countStrike < 3;) {
				String Throw = scanner.toString();
				if(Throw.equals("ストライク")){
					countStrike++;
				}
			}
		}
	}
}
